				.preIPart = 0,
				.preError = 0,
				.isFirstCompute = true
		},

		.PID[1]={
				.KP=0,
				.KI=0,
				.KD=0,
				.minIpart = -2000,
				.maxIpart = 2000,
				.minDpart = -2000,
				.maxDpart = 2000,
				.minOut = -2000,
				.maxOut = 2000,

				.preIPart = 0,
				.preError = 0,
				.isFirstCompute = true
		},

		.PID[2]={
				.KP=0,
				.KI=0,
				.KD=0,
				.minIpart = -2000,
				.maxIpart = 2000,
				.minDpart = -2000,
				.maxDpart = 2000,
				.minOut = -2000,
				.maxOut = 2000,

				.preIPart = 0,
				.preError = 0,
