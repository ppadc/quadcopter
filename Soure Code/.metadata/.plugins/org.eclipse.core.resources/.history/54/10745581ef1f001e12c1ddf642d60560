#include<stdio.h>
#include<math.h>
#include "matrix.h"

void matrixPower(double matrix[9][9], int *n, double result[9][9]) {
    for (int i = 0; i < 9; i++) {
        for (int j = 0; j < 9; j++) {
            result[i][j] = (i == j) ? 1 : 0;
        }
    }

    for (int k=0; k<*n; k++) {
        int temp[9][9] = {0};
        for (int i = 0; i < 9; i++) {
            for (int j = 0; j < 9; j++) {
                for (int x = 0; x < 9; x++) {
                    temp[i][j] += matrix[i][x] * result[x][j];
                }
            }
        }
        for (int i = 0; i < 9; i++) {
            for (int j = 0; j < 9; j++) {
                result[i][j] = temp[i][j];
            }
        }
    }
}

double determuinant(double a[25][25],float k){
	float s = 1, det = 0;
	double  b[25][25];
	int i, j, m, n, c;
	  float s = 1, det = 0, b[25][25];
	  int i, j, m, n, c;
	  if (k == 1)
	    {
	     return (a[0][0]);
	    }
	  else
	    {
	     det = 0;
	     for (c = 0; c < k; c++)
	       {
	        m = 0;
	        n = 0;
	        for (i = 0;i < k; i++)
	          {
	            for (j = 0 ;j < k; j++)
	              {
	                b[i][j] = 0;
	                if (i != 0 && j != c)
	                 {
	                   b[m][n] = a[i][j];
	                   if (n < (k - 2))
	                    n++;
	                   else
	                    {
	                     n = 0;
	                     m++;
	                     }
	                   }
	               }
	             }
	          det = det + s * (a[0][c] * determinant(b, k - 1));
	          s = -1 * s;
	          }
	    }
	return(det);
}


