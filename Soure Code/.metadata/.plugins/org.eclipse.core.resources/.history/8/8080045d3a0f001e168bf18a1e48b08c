#ifndef APPLICATION_SENSOR_BME680_BME680_DEF_H_
#define APPLICATION_SENSOR_BME680_BME680_DEF_H_

#define 	BME68X_CHIP_ID 				0x61

#define 	BME680_SOFT_RESET_CMD 		0xB6
/* Success */
#define 	BME680_OK			 		0

/* Errors */
/* Null pointer passed */
#define 	BME680_E_NULL_PTR    		-1
/* Communication failure */
#define 	BME680_E_COM_FAIL 			-2
/* Sensor not found */
#define 	BME680_E_DEV_NOT_FOUND      -3
/* Incorrect length parameter */
#define 	BME680_E_INVALID_LENGTH     -4
/* Self test fail error */
#define 	BME680_E_SELF_TEST 			-5

/* Warnings */
/* Define a valid operation mode */
#define 	BME680_W_DEFINE_OP_MODE      1

/* No new data was found */
#define 	BME680_W_NO_NEW_DATA         2

/* Define the shared heating duration */
#define 	BME680_W_DEFINE_SHD_HEATR_DUR 3

/* Information - only available via bme68x_dev.info_msg */
#define 	BME680_I_PARAM_CORR           1



#endif /* APPLICATION_SENSOR_BME680_BME680_DEF_H_ */
